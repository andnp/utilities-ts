{
  "name": "utilities-ts",
  "version": "0.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tslint --config tslint.json --project . --format stylish",
    "test": "export RNG=`node -e 'console.log(Math.random())'` && echo $RNG && jest",
    "prepush": "npm run -s lint && npm test",
    "tsc": "tsc",
    "watch": "tsc --watch"
  },
  "author": "Andy Patterson",
  "license": "ISC",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "__TEST__": true
    },
    "testMatch": [
      "**/tests/**/*.test.ts?(x)"
    ],
    "moduleDirectories": [
      "node_modules",
      "./src"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.2",
    "tslint": "^5.9.1",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@types/lodash": "^4.14.108",
    "@types/node": "^10.0.3",
    "lodash": "^4.17.10",
    "simplytyped": "^1.4.0"
  }
}
